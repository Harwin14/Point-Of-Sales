                                </div>
                                <!-- ==================Searching = -->
                                <div class="card mt-2 ">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Pencarian Data</h4>
                                        <div class="row">
                                            <form id="form-search">
                                                <input type="hidden" name="page" value="1">
                                                <div class="row mb-3">
                                                    <label for="findUnit"
                                                        class="col-sm-4 col-form-label">unit</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" class="form-control" id="findUnit"
                                                            name="findUnit" placeholder="Tulis ID Satuan"
                                                            value="<%=query.findUnit%>">
                                                    </div>
                                                </div>
    
                                                <div class="row mb-3">
                                                    <label for="findName"
                                                        class="col-sm-4 col-form-label">Nama Satuan</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" class="form-control" id="findName"
                                                            name="findName" placeholder="enter name here.." 
                                                            value="<%=query.findName%>">
                                                    </div>
                                                </div>
                                               
    
                                                <div class="card-footer">
                                                    <button type="submit" class="btn btn-primary">Cari</button>
    
                                                    <a href="/units" class="btn btn-warning">Reset</a>
                                                </div>
    
                                            </form>
                                        </div>
    
                                    </div>
                                </div>
                               
                            </div>
                            

                            <div class="text-center">
                                <%- include('../partials/alert') %>
                            </div>                   
                        </div>
                        
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Unit</th>
                                            <th>Name</th>
                                            <th>Note</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Unit</th>
                                            <th>Name</th>
                                            <th>Note</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% units.forEach((item)=> { %>
                                            <tr>

                                                <td>
                                                    <%= item.unit %>
                                                </td>
                                                <td>
                                                    <%= item.name %>
                                                </td>
                                                <td>
                                                    <%= item.note %>
                                                </td>
                                                <td>
                                                    <div class="d-grid gap-2 d-md-block">
                                                        <a type="button"
                                                            class="btn btn-success rounded-circle"
                                                            href="/units/edit/<%= item.id %>"><i class="fas fa-solid fa-pen"href="/edit"></i></a>
                                                        <a type="button"
                                                            class="btn btn-danger  rounded-circle"onclick="$('#modal-delete').modal('show')"
                                                            title="Delete" ><i
                                                                class="fas fa-solid fa-trash"></i></a>
                                                    </div>
                                                        <div class="modal fade" id="modal-delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title">Deleted confirmation</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"onclick="$('#modal-delete').modal('hide')">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <p>Are you sure, you want to delete it?</p>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal"onclick="$('#modal-delete').modal('hide')">No</button>
                                                                        <a id="btn-delete" type="button" class="btn btn-primary" id="btn-deleted" href="units/delete/<%= item.id %>">Yes</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                 </table>
                                 
